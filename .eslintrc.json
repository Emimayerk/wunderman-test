{
  "env": {
    "browser": true,
    "commonjs": true,
    "es2021": true
  },
  "extends": ["airbnb-base"],
  "parserOptions": {
    "ecmaVersion": 12
  },
  "rules": {
    "indent": ["error", 2, { "SwitchCase": 1 }],

    "linebreak-style": ["error", "windows"],

    "quotes": ["error", "single"],

    "semi": ["error", "always"],

    "no-unused-vars": "error",

    "no-invalid-regexp": "error",

    "no-restricted-syntax": [
      "error",
      "FunctionExpression",
      "WithStatement",
      "BinaryExpression[operator='in']"
    ]
  }
}
